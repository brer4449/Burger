<h1>Eat Da Burrrgrrrr!</h1>

<ul>
  {{#each allBurgers}}
  <li>
    <p class="burger-container">
      {{ this.dataValues.id }}. {{ dataValues.burgername }}

      <button data-burgerid="{{ this.dataValues.id }}" class="delburger">Delete Burger!</button>
    </p>
  </li>
  {{/each}}
</ul>
<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>To be eaten</h3>
    </div>
    <div class="col-6">
      <h3>Devoured</h3>
    </div>
  </div>
</div>


<h2>Create a Burger</h2>
{{!-- Figure out why createburger isn't working in jQuery (app.js) --}}
{{!-- <form id="createburger" class="button-size"> --}}
<form class="button-size" method="POST" action="/api/burgers">
  <textarea type="text" name="burger" class="new-item"></textarea>
  <button type="submit" class="btn btn-primary">Save Burger!</button>
</form>